{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "typeRoots": ["./src/types", "../../node_modules/@types"],
    "types": [],
    "paths": {
      "@/*": ["./src/*"],
      "@fullstack-hub/shared": ["../../packages/shared/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../../packages/shared" }]
}
