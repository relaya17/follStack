{
    "name": "fullstack-learning-hub",
    "version": "1.0.0",
    "description": "פלטפורמה אינטראקטיבית ללמידת Full Stack Development",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build --parallel",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint",
        "test": "turbo run test --parallel",
        "clean": "turbo run clean",
        "type-check": "turbo run type-check --cache-dir=.turbo-cache",
        "dev:web": "turbo run dev --filter=web",
        "dev:api": "turbo run dev --filter=api",
        "build:web": "turbo run build --filter=web",
        "build:api": "turbo run build --filter=api",
        "start:web": "cd apps/web && pnpm start",
        "start:api": "cd apps/api && pnpm start",
        "install:all": "pnpm install",
        "clean:all": "turbo run clean && rm -rf node_modules apps/*/node_modules",
        "dev:all": "turbo run dev --parallel"
    },
    "devDependencies": {
        "turbo": "1.10.12",
        "@types/node": "20.8.0",
        "typescript": "5.2.2",
        "dotenv": "16.3.1",
        "jest": "29.7.0",
        "ts-jest": "29.1.1",
        "@types/jest": "29.5.5",
        "eslint": "8.48.0",
        "prettier": "3.6.2",
        "eslint-config-prettier": "9.1.2"
    },
    "packageManager": "pnpm@8.10.0",
    "engines": {
        "node": ">=18.17.0",
        "pnpm": ">=8.10.0"
    }
}