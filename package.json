{
    "name": "fullstack-learning-hub",
    "version": "1.0.0",
    "description": "פלטפורמה אינטראקטיבית ללמידת Full Stack Development",
    "private": true,
    "workspaces": [
        "apps/**",
        "packages/**"
    ],
    "scripts": {
        "build": "tsc -b",
        "build:clean": "rimraf **/dist && tsc -b",
        "build:web": "pnpm --filter @fullstack-hub/web build",
        "build:api": "pnpm --filter @fullstack-hub/api build",
        "dev": "concurrently \"pnpm dev:client\" \"pnpm dev:api\"",
        "dev:client": "pnpm --filter @fullstack-hub/web dev",
        "dev:api": "pnpm --filter @fullstack-hub/api dev",
        "start": "concurrently \"pnpm start:web\" \"pnpm start:api\"",
        "start:web": "pnpm --filter @fullstack-hub/web start",
        "start:api": "pnpm --filter @fullstack-hub/api start",
        "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "install:all": "pnpm install",
        "clean": "rimraf node_modules pnpm-lock.yaml && pnpm install",
        "booklet:pdf": "cd docs/learning-book && npm install --no-audit --no-fund --silent && node export-pdf.mjs"
    },
    "devDependencies": {
        "@types/jest": "29.5.5",
        "@types/node": "20.8.0",
        "autoprefixer": "^10.4.21",
        "concurrently": "8.2.2",
        "dotenv": "16.3.1",
        "eslint": "8.52.0",
        "eslint-config-prettier": "9.1.2",
        "jest": "29.7.0",
        "nodemon": "3.0.1",
        "postcss": "^8.5.6",
        "prettier": "3.6.2",
        "rimraf": "5.0.5",
        "ts-jest": "29.1.1",
        "tsc-alias": "^1.8.16",
        "typescript": "5.2.2"
    },
    "packageManager": "pnpm@8.10.0",
    "engines": {
        "node": ">=18.17.0",
        "pnpm": ">=8.10.0"
    }
}